<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :Benutzername %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :Passwort %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "anmelden" %>
  </div>
<% end %>
